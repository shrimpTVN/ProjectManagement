<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.src.controllers.LoginController">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="228.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="400.0" fitWidth="228.0" layoutX="7.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="382.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="54.0" fitWidth="87.0" layoutX="143.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true" />
            <GridPane layoutX="37.0" layoutY="140.0" prefHeight="83.0" prefWidth="299.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="125.0" minWidth="10.0" prefWidth="70.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="284.0" minWidth="10.0" prefWidth="226.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="31.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="29.0" minHeight="10.0" prefHeight="29.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Password: ">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label text="User name: " GridPane.rowIndex="1">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
<!--                  input user name and password-->
                  <TextField fx:id="userNameInput" prefHeight="25.0" prefWidth="130.0" promptText="Username" GridPane.columnIndex="1">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="passwordInput" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </PasswordField>
               </children>
            </GridPane>

            <Label fx:id="labelLoginMess" alignment="CENTER" contentDisplay="CENTER" layoutX="62.0" layoutY="233.0" prefHeight="19.0" prefWidth="251.0" text="Invalid login. Please try again." textFill="#eb1111">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <!--            control button-->
            <Button fx:id="loginBtn" layoutX="55.0" layoutY="259.0" mnemonicParsing="false" onAction="#handleLoginBtnClick" prefHeight="37.0" prefWidth="264.0" text="Login">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="cancelBtn" layoutX="55.0" layoutY="308.0" mnemonicParsing="false" onAction="#handleCancelBtnClick" prefHeight="37.0" prefWidth="264.0" text="Cancel">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>

            <Separator layoutX="-3.0" orientation="VERTICAL" prefHeight="400.0" prefWidth="0.0" />
            <Circle fill="DODGERBLUE" layoutX="182.0" layoutY="58.0" radius="22.0" stroke="BLACK" strokeType="INSIDE" />
            <Label alignment="CENTER" layoutX="32.0" layoutY="81.0" prefHeight="18.0" prefWidth="300.0" text="Don't have account yet ? Sign up now" textAlignment="CENTER" textFill="#0f97b9" />

         </children>
      </AnchorPane>
   </center>
</BorderPane>
